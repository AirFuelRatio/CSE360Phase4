<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="application.LoginController" 
          hgap="5" vgap="5" 
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextField fx:id="nameField" promptText="Enter your username" GridPane.rowIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="1"/>
    <TextField fx:id="companyIDField" promptText="Enter Company ID" GridPane.rowIndex="2" visible="false"/>
    <Button fx:id="loginBtn" text="Login" onAction="#handleLoginButtonAction" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Button fx:id="signupBtn" text="Signup" onAction="#handleSignupButtonAction" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false"/>
    <Button fx:id="toggleViewBtn" text="Switch to Signup" onAction="#toggleView" GridPane.rowIndex="4"/>
</GridPane>
